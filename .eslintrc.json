{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"root": true,
	"extends": [
		"eslint:recommended",
		"plugin:prettier/recommended",
		"plugin:@next/next/recommended",
		"prettier",
		"next/core-web-vitals"
	],
	"ignorePatterns": ["public/2023/media/icons/**/*"],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module",
		"project": "./tsconfig.json"
	},
	"rules": {
		"no-undef": "off"
	},
	"plugins": ["react", "prettier"]
}
