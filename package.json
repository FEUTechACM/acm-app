{
	"name": "feu-tech-acm",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "yarn run partytown && next build",
		"postbuild": "next-sitemap",
		"partytown": "partytown copylib public/~partytown",
		"start": "next start",
		"lint": "next lint && stylelint \"**/*.css\"",
		"prepare": "husky install",
		"fontello": "fontello-cli --config $(grep -rl 'fontello-84cd01f8/config.json' public) open",
		"fontello-update": "fontello-cli --config $(grep -rl 'fontello-84cd01f8/config.json' public) install",
		"bubblewrap": "npx bubblewrap init --manifest=https://acmx.vercel.app/manifest.webmanifest",
		"killport": "node -e \"const kill = require('kill-port');const p = 3000; setTimeout(() => kill(p, 'tcp').then(console.log('killed 3000'),process.exit(0)).catch(console.log('3000 not killed'),process.exit(0)), 1000)\"",
		"removeNext": "node -e \"const fs = require('fs');const p = '.next';try {fs.rmdirSync(p, { recursive: true });} catch (e) {console.warn('Error folder:', p, e);}process.exit(0);\""
	},
	"lint-staged": {
		"**/*": "prettier --write --ignore-unknown"
	},
	"prisma": {
		"seed": "tsx prisma/seed.ts",
		"drop": "tsx prisma/drop.ts"
	},
	"dependencies": {
		"@auth/prisma-adapter": "^1.0.10",
		"@bubblewrap/cli": "^1.21.0",
		"@builder.io/partytown": "^0.8.1",
		"@nextui-org/react": "^2.2.9",
		"@prisma/client": "^5.7.0",
		"@prisma/extension-accelerate": "^0.6.2",
		"@reduxjs/toolkit": "^2.0.1",
		"@t3-oss/env-nextjs": "^0.7.1",
		"@types/node": "20.10.4",
		"@types/react": "18.2.43",
		"@types/react-dom": "18.2.17",
		"@vercel/analytics": "^1.1.1",
		"eslint": "8.55.0",
		"eslint-config-next": "14.0.4",
		"fontello-cli": "^0.6.2",
		"framer-motion": "^10.16.16",
		"next": "14.0.4",
		"next-auth": "^4.24.5",
		"next-pwa": "^5.6.0",
		"next-redux-wrapper": "^8.1.0",
		"next-sitemap": "^4.2.3",
		"nodemailer": "^6.9.7",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"react-hook-form": "^7.49.0",
		"react-redux": "^9.0.3",
		"sharp": "^0.33.0",
		"tsparticles": "^3.0.2",
		"typescript": "5.3.3",
		"zod": "^3.22.4"
	},
	"main": "next.config.js",
	"repository": "git@github.com:FEU-Tech-ACM-Student-Chapter/acm-app.git",
	"author": "Alpha Romer Coma <alpha.coma.ict@gmail.com>",
	"license": "Apache-2.0",
	"devDependencies": {
		"@commitlint/cli": "^18.4.3",
		"@commitlint/config-conventional": "^18.4.3",
		"@formkit/auto-animate": "^0.8.1",
		"@next-auth/prisma-adapter": "^1.0.7",
		"@tsparticles/engine": "^3.0.2",
		"@tsparticles/react": "^3.0.0",
		"@types/adm-zip": "^0.5.5",
		"@types/eslint-config-prettier": "^6.11.3",
		"@types/next-pwa": "^5.6.9",
		"@types/nodemailer": "^6.4.14",
		"@types/sharp": "^0.32.0",
		"@vercel/speed-insights": "^1.0.2",
		"adm-zip": "^0.5.10",
		"autoprefixer": "^10.4.16",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.0.1",
		"husky": "^8.0.3",
		"kill-port": "^2.0.1",
		"lint-staged": "^15.2.0",
		"pdf-lib": "1.9.0",
		"postcss": "^8.4.32",
		"prettier": "^3.1.1",
		"prisma": "^5.7.0",
		"stylelint": "^16.0.2",
		"stylelint-config-prettier": "^9.0.5",
		"stylelint-config-recommended": "^14.0.0",
		"stylelint-order": "^6.0.4",
		"tailwindcss": "^3.3.6",
		"tsx": "^4.6.2"
	},
	"stylelint": {
		"extends": [
			"stylelint-config-recommended"
		],
		"rules": {
			"at-rule-empty-line-before": [
				"always",
				{
					"except": [
						"blockless-after-blockless",
						"blockless-after-same-name-blockless",
						"first-nested"
					],
					"ignore": [
						"after-comment",
						"inside-block"
					],
					"ignoreAtRules": [
						"apply",
						"screen",
						"font-face",
						"nest"
					]
				}
			],
			"at-rule-no-unknown": [
				true,
				{
					"ignoreAtRules": [
						"tailwind",
						"variants",
						"responsive",
						"apply",
						"screen"
					]
				}
			],
			"property-no-unknown": [
				true,
				{
					"ignoreProperties": [
						"font-path"
					]
				}
			],
			"selector-nested-pattern": "^&"
		},
		"ignoreFiles": [
			"public/2023/media/icons/**/*"
		]
	}
}
